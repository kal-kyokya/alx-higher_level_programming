#!/usr/bin/python3
"""No modules imported, therefore, no module descriptions."""


def add_integer(a, b=98):
    """Computes the sum of two numbers.

    >> add(1, 2)
    >> 3
    >> add(1.0, 2.0)
    >> 3
    >> add(1)
    >> 99
    >> add(1.0)
    >> 99
    >> add('a')
    >> a must be an integer
    >> add(1, 'b')
    >> b must be an integer
    >> add("aa")
    >> a must be an integer
    >> add(1, "bb")
    >> b must be an integer
    >> add(None)
    >> a must be an integer

    Args:
        a: First number.
        b: Second number, whose default value is 98.

    Return:
        The sum of a and b.
    """
    if isinstance(a, (int, float)) is not True:
       raise TypeError("a must be an integer")
    if isinstance(b, (int, float)) is not True:
        raise TypeError("b must be an integer")

    return int(a) + int(b)

if __name__ == "__main__":
    import doctest
    """This module provides our Test file with a method:
        testmod()
    automatically running test for our add function.
    """

    doctest.testmod()
